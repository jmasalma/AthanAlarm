<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="400dp"
    android:height="400dp"
    android:viewportWidth="400"
    android:viewportHeight="400">

    <!-- Green background circle -->
    <path
        android:fillColor="#8ABF8B"
        android:pathData="M 200,200 m -200,0 a 200,200 0 1,1 400,0 a 200,200 0 1,1 -400,0" />

    <!-- Center star (light green) - created from two rotated squares -->
    <group
        android:pivotX="200"
        android:pivotY="200"
        android:rotation="45">
        <path
            android:fillColor="@color/colorPrimaryContainer"
            android:pathData="M 150,150 h 100 v 100 h -100 Z" />
    </group>
    <path
        android:fillColor="@color/colorPrimaryContainer"
        android:pathData="M 150,150 h 100 v 100 h -100 Z" />

    <!-- Direction Markers -->
    <group>
        <!-- North Marker (Red) -->
        <path
            android:fillColor="#FF0000"
            android:pathData="M 190,20 l 10,20 l -20,0 Z" />
        <!-- East Marker (White) -->
        <path
            android:fillColor="@android:color/white"
            android:pathData="M 380,195 l -10,5 l 0,-10 Z" />
        <!-- South Marker (White) -->
        <path
            android:fillColor="@android:color/white"
            android:pathData="M 195,380 l 5,-10 l -10,0 Z" />
        <!-- West Marker (White) -->
        <path
            android:fillColor="@android:color/white"
            android:pathData="M 20,195 l 10,5 l 0,-10 Z" />
        <!-- North Marker Text -->
        <path
            android:fillColor="#FF0000"
            android:pathData="M 195,70 L 195,50 L 198,50 L 202,65 L 202,50 L 205,50 L 205,70 L 202,70 L 198,55 L 198,70 Z" />
    </group>
</vector>
